{
  "type": "object",
  "properties": {
    "ModuleTitle": {
      "type": "string",
      "title": "Module Title"
    },
    "ModuleAnchor": {
      "type": "string",
      "title": "Module Anchor"
    },
    "Extensions": {
      "type": "array",
      "title": "Extensions",
      "items": {
        "type": "object",
        "properties": {
          "Title": {
            "type": "string",
            "title": "Title",
            "required": true
          },
          "Description": {
            "type": "string",
            "title": "Description",
            "required": true
          },
          "Category": {
            "type": "array",
            "title": "Category(ies)",
            "enum": [
              "devtool",
              "dnnmodule",
              "dnnprompt",
              "dnnprovider",
              "dnnjob",
              "dnnux",
              "opensource",
              "commercial"
            ],
            "default": "devtool",
            "required": true
          },
          "Homepage": {
            "type": "string",
            "title": "Home Page",
            "required": true
          },
          "Download": {
            "type": "string",
            "title": "Download",
            "required": true
          },
          "Documentation": {
            "type": "string",
            "title": "Documentation"
          },
          "Logo": {
            "type": "string",
            "title": "Logo",
            "required": true
          },
          "BadgeText": {
            "type": "string",
            "title": "Badge text"
          }
        }
      }
    }
  }
}