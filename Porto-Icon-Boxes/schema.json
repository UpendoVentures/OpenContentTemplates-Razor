{
  "type": "object",
  "properties": {
    "ModuleTitle": {
      "type": "string",
      "title": "Module Title"
    },
    "Items": {
      "type": "array",
      "title": "Content Items",
      "items": {
        "type": "object",
        "properties": {
          "Title": {
            "type": "string",
            "title": "Title (required)",
            "required": true
          },
          "Content": {
            "type": "string",
            "title": "Content (required)",
            "required": true
          },
          "Icon": {
            "type": "string",
            "title": "Card Icon (optional)"
          },
          "ButtonText": {
            "type": "string",
            "title": "Button Text (optional)"
          },
          "ButtonIcon": {
            "type": "string",
            "title": "Button Icon (optional)"
          },
          "ButtonUrl": {
            "type": "string",
            "title": "Button URL"
          },
          "ButtonTarget": {
            "type": "string",
            "title": "Button Target",
            "enum": [
              "_blank",
              "_parent",
              "_Self",
              "_top"
            ],
            "default": "_top"
          }
        }
      }
    }
  }
}