{
  "type": "object",
  "properties": {
    "ModuleTitle": {
      "type": "string",
      "title": "Module Title"
    },
    "ModuleAnchor": {
      "type": "string",
      "title": "Module Anchor"
    },
    "Heading": {
      "type": "string",
      "title": "Heading Text (required)"
    },
    "SubHeading": {
      "type": "string",
      "title": "Heading Subtitle"
    },
    "Button": {
      "type": "string",
      "title": "Button Text (optional)"
    },
    "ButtonLink": {
      "type": "string",
      "title": "Button Link"
    },
    "LinkTarget": {
      "type": "string",
      "title": "Link Target",
      "enum": [
        "_blank",
        "_self",
        "_parent",
        "_top"
      ],
      "default": "_self"
    },
    "Style": {
      "type": "string",
      "title": "Style",
      "enum": [
        "Default",
        "WithBorders",
        "Featured",
        "Colors",
        "WithArrow",
        "Animated",
        "ButtonCentered",
        "Small",
        "FullWidth",
        "Parallax",
        "Footer"
      ]
    },
    "WithBorders": {
      "type": "string",
      "title": "With Borders",
      "enum": [
        "none",
        "with-borders",
        "with-full-borders"
      ],
      "default": "none",
      "required": true,
      "dependencies": [
        "Style"
      ]
    },
    "Featured": {
      "type": "string",
      "title": "Featured",
      "enum": [
        "none",
        "featured featured-primary",
        "featured featured-secondary",
        "featured featured-tertiary",
        "featured featured-quaternary"
      ],
      "default": "none",
      "required": true,
      "dependencies": [
        "Style"
      ]
    },
    "Color": {
      "type": "string",
      "title": "Color",
      "enum": [
        "none",
        "call-to-action-primary",
        "call-to-action-secondary",
        "call-to-action-tertiary",
        "call-to-action-quaternary",
        "call-to-action-default"
      ],
      "default": "none",
      "required": true,
      "dependencies": [
        "Style"
      ]
    },
    "ParallaxImage": {
      "type": "string",
      "title": "ParallaxImage",
      "required": true,
      "dependencies": [
        "Style"
      ]
    },
    "Animation": {
      "type": "string",
      "title": "Entrance Animation",
      "enum": [
        "none",
        "fadeIn",
        "fadeInUp",
        "fadeInDown",
        "fadeInLeft",
        "fadeInRight",
        "fadeInUpBig",
        "fadeInDownBig",
        "fadeInLeftBig",
        "fadeInRightBig",
        "bounceIn",
        "bounceInUp",
        "bounceInDown",
        "bounceInLeft",
        "bounceInRight",
        "rotateIn",
        "rotateInUpLeft",
        "rotateInDownLeft",
        "rotateInUpRight",
        "rotateInDownRight",
        "flash",
        "shake",
        "bounce",
        "tada",
        "swing",
        "wobble",
        "wiggle"
      ]
    }
  }
}