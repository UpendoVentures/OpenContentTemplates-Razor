{
  "fields": {
    "ModuleTitle": {
      "type": "text"
    },
    "ModuleAnchor": {
      "type": "text",
      "helper": "Used to create #anchor-links on the page (numbers, letters, hyphens only)."
    },
    "Heading": {
      "type": "ckeditor",
      "configset": "basic"
    },
    "SubHeading": {
      "type": "ckeditor",
      "configset": "basic"
    },
    "Button": {
      "type": "text"
    },
    "ButtonLink": {
      "type": "text",
      "placeholder": "Example: https://github.com/UpendoVentures/OpenContentTemplates"
    },
    "LinkTarget": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "New Tab",
        "Self",
        "Parent",
        "Top"
      ]
    },
    "Style": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "Default",
        "With Borders",
        "Featured",
        "Colors",
        "With Arrow",
        "Animated",
        "Button Centered",
        "Small",
        "Full Width",
        "Parallax",
        "Footer"
      ]
    },
    "WithBorders": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "None",
        "With Borders",
        "With Full Borders"
      ],
      "dependencies": {
        "Style": [
          "WithBorders"
        ]
      }
    },
    "Featured": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "None",
        "Featured Primary",
        "Featured Secondary",
        "Featured Tertiary",
        "Featured Quaternary"
      ],
      "dependencies": {
        "Style": [
          "Featured"
        ]
      }
    },
    "Color": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "None",
        "Primary",
        "Secondary",
        "Tertiary",
        "Quaternary",
        "Default"
      ],
      "dependencies": {
        "Style": [
          "Colors",
          "Small",
          "FullWidth"
        ]
      }
    },
    "ParallaxImage": {
      "type": "image",
      "dependencies": {
        "Style": [
          "Parallax"
        ]
      }
    },
    "Animation": {
      "type": "select",
      "sort": false,
      "optionLabels": [
        "No Animation",
        "Fade In",
        "Fade In, Up",
        "Fade In, Down",
        "Fade In, Left",
        "Fade In, Right",
        "Fade In, Up (Big)",
        "Fade In, Down (Big)",
        "Fade In, Left (Big)",
        "Fade In, Right (Big)",
        "Bounce In",
        "Bounce In, Up",
        "Bounce In, Down",
        "Bounce In, Left",
        "Bounce In, Right",
        "Rotate In",
        "Rotate In, Up, Left",
        "Rotate In, Down, Left",
        "Rotate In, Up, Right",
        "Rotate In, Down, Right",
        "Flash",
        "Shake",
        "Bounce",
        "Ta-Da",
        "Swing",
        "Wobble",
        "Wiggle"
      ],
      "helper": "If specified, how do you want the element to appear when it appears to the visitor?"
    }
  }
}