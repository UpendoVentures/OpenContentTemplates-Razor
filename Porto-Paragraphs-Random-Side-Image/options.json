{
  "fields": {
    "Paragraph": {
      "type": "ckeditor",
      "configset": "basic"
    },
    "Images": {
      "type": "accordion",
      "helper": "At least one image is required. ",
      "items": {
        "fields": {
          "AltText": {
            "type": "text",
            "placeholder": "Used for SEO"
          },
          "ImagePath": {
            "type": "image",
            "uploadfolder": "Images",
            "typeahead": {
              "Folder": "Images"
            }
          },
          "CssClass": {
            "type": "text",
            "placeholder": "img-fluid"
          }
        }
      }
    }
  }
}